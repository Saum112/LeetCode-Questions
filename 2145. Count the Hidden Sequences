class Solution {
    public int numberOfArrays(int[] diff, int lower, int upper) {
        
       long max = 0 , min = 0 , sum = 0;
        
       for(int i = 0 ; i < diff.length ; i++){
           
           sum += diff[i];
           min = Math.min(min , sum); 0 -1 -1   [1,-2,4] = 
           max = Math.max(max , sum); 1  1  3
           
           
       }
        
       
        
       long res1 = upper-max , res2 = lower-min;  
        
       return (res1-res2+1)>0?(int)(res1-res2+1):0;
        
    }
}
